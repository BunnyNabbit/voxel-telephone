---
const date = Astro.props.date;
const includeTime = Astro.props.includeTime ?? false;
---

<style>
	.timestamp {
		font-size: 0.8em;
	}
</style>
<span class="timestamp">{
		date.toLocaleDateString("en-US", {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}{
		includeTime &&
			` ${date.toLocaleTimeString("en-US", { hour: "2-digit", minute: "2-digit" })}`
	}</span
>
