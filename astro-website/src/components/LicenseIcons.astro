---
import licenseData from "../../../creationLicenses.mjs"
const licenses = Astro.props.licenses
let Container = "div"
let target = null
let rel = null
if (Astro.props.link) {
	Container = "a"
	target = "_blank"
	rel = "license noopener"
}
---

{
	licenses.map((license) => (
		<Container href={licenseData[license].licenseData.url} target={target} rel={rel}>
			<img src={`/license-icons/${licenseData[license].licenseData.icon}`} alt={licenseData[license].name} title={licenseData[license].name} class={licenseData[license].licenseData.iconClass ?? "license-icon-banner"} />
		</Container>
	))
}
<style>
	.license-icon-banner {
		width: 88px;
		height: 31px;
	}
	.license-icon-square {
		width: 31px;
		height: 31px;
	}
</style>
