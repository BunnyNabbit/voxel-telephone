---
const licenses = Astro.props.licenses;
import licenseData from "../../../creationLicenses.mjs";
let Container = "div";
if (Astro.props.link) {
	Container = "a";
}
---

{
	licenses.map((license) => (
		<Container>
			<img
				src={`/license-icons/${licenseData[license].licenseData.icon}`}
				alt={licenseData[license].name}
				title={licenseData[license].name}
				class={
					licenseData[license].licenseData.iconClass ??
					"license-icon-banner"
				}
			/>
		</Container>
	))
}
<style>
	.license-icon-banner {
		width: 88px;
		height: 31px;
	}
	.license-icon-square {
		width: 31px;
		height: 31px;
	}
</style>
