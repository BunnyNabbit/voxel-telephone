---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import getCanonicalURL from "../shared/getCanonicalURL.mjs";
let { title } = Astro.props;
let tabTitle;
if (title !== "Voxel Telephone") {
	tabTitle = title + " - Voxel Telephone";
} else {
	tabTitle = "Voxel Telephone";
}
let canon;
if (Astro.props.canon) {
	canon = getCanonicalURL(Astro.props.canon);
} else {
	canon = getCanonicalURL(Astro.url.pathname);
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="canonical" href={canon} />
		<title>{tabTitle}</title>
	</head>
	<body>
		<Header />
		<h1>{title}</h1>
		<article>
			<slot />
			<!-- your content is injected here -->
		</article>
		<Footer />
	</body>
	<style is:global>
		* {
			font-family: Arial, Helvetica, sans-serif;
		}
		h1 {
			font-size: 2rem;
		}
		.card {
			box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
			transition: 0.3s;
			width: 20%;
			border-radius: 5px;
			width: 165px;
			margin: 4px;
			overflow: hidden;
		}
		.float {
			float: left;
		}
		.flex-container {
			display: flex;
			flex-wrap: wrap;
		}
		.card-container {
			padding: 2px 16px;
		}
		[aria-disabled="true"] {
			opacity: 0.5;
			pointer-events: none;
		}
		.card-image {
			overflow: hidden;
			border-radius: 5px 5px 0 0;
			background-color: #f1f1f1;
			position: relative;
		}
		.card-image-container {
			justify-self: center;
		}

		.card:hover {
			box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
		}
		.pagination-button {
			display: block;
			width: 100%;
			text-align: center;
			background-color: #4CAF50;
			color: white;
			padding: 14px 20px;
			margin: 10px 0;
			text-decoration: none;
			border-radius: 5px;
		}
	</style>
</html>
